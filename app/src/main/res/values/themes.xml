<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Theme.WomenInStem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/pink</item> <!-- blush pink -->
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- New added Line for button -->
        <item name="buttonStyle">@style/BlushButton</item>
    </style>

    <style name="Theme.WomenInStem.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WomenInStem.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.WomenInStem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ðŸŽ€ Hereâ€™s the BlushButton style definition -->
    <style name="BlushButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/pink</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>
